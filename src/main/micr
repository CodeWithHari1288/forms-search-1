const path = require("path");
const micromarkAutoLinkDir = path.dirname(
  require.resolve("micromark-extension-gfm-autolink-literal/package.json")
);

module.exports = {
  module: {
    rules: [
      { test: /\.(js|jsx)$/, exclude: /node_modules/, use: "babel-loader" },
      {
        test: /\.(js|mjs)$/,
        include: micromarkAutoLinkDir,
        type: "javascript/auto",
        use: {
          loader: "babel-loader",
          options: {
            presets: [["@babel/preset-env", { targets: { esmodules: false } }]],
            plugins: [
              "@babel/plugin-proposal-nullish-coalescing-operator",
              "@babel/plugin-proposal-optional-chaining",
            ],
            cacheDirectory: true,
          },
        },
      },
      { test: /\.m?js$/, include: micromarkAutoLinkDir, resolve: { fullySpecified: false } },
    ],
  },
};